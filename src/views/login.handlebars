<style>
  #githubButton,
  #igButton,
  #fbButton,
  #googleButton {
    width: 100%;
    height:
      30px;
  }

  #githubButton {
    background-color: #333;
    color: #fff;
  }

  #igButton {
    background: linear-gradient(45deg, #bc2a8d, #e95950);
    color: #fff;
  }

  #fbButton {
    background-color: #1877f2;
    color: #fff;
  }

  #googleButton {
    background-color:
      #4285F4;
    color: #fff;
  }
</style>
<br /><br />
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Iniciar sesión
        </div>
        <div class="card-body">
          <form action="" id="loginForm">
            <div class="form-group">
              <label for="email">Correo electrónico</label>
              <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                placeholder="Ingrese su correo electrónico" required />
              <small id="emailHelp" class="form-text text-muted">Nunca
                compartiremos su correo electrónico con nadie más.</small>
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Contraseña"
                required />
            </div>
            <div style="text-align: center;">
              <button type="submit" class="btn btn-primary">Iniciar sesión</button>
              <button class="btn btn-danger" id="restartPassButton">Restablecer Password</button>
              <button class="btn btn-warning" value="Registrarme" id="signupButton">Registrarme</button>
            </div>
            <hr />
            <div class="form-group">
              <center>Autenticar con plataformas externas</center>
              <button type="button" id="githubButton"><i class="fab fa-github"></i>
                Acceder con Github</button>
              <button type="button" id="igButton"><i class="fab fa-instagram"></i>
                Acceder con Instagram</button>
              <button type="button" id="fbButton"><i class="fab fa-facebook"></i>
                Acceder con Facebook</button>
              <button type="button" id="googleButton"><i class="fab fa-google"></i>
                Acceder con Google</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>